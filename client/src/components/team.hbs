<!-- Team Section Component -->
<section id="team" class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4" data-testid="team-title">{{team.title}}</h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto" data-testid="team-subtitle">
                {{team.subtitle}}
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {{#each team.members}}
            <div class="team-card text-center group" data-testid="team-member-{{id}}">
                <div class="relative mb-6">
                    <img src="{{image}}" alt="{{imageAlt}}" class="w-32 h-32 rounded-full mx-auto object-cover shadow-lg" />
                    <div class="absolute inset-0 bg-primary/20 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <h3 class="text-xl font-bold text-foreground mb-2">{{name}}</h3>
                <p class="text-primary font-semibold mb-3">{{role}}</p>
                <p class="text-muted-foreground text-sm mb-4">{{bio}}</p>
                <div class="flex justify-center space-x-3">
                    {{#each socialLinks}}
                    <a href="{{url}}" class="text-muted-foreground hover:text-primary transition-colors duration-200" data-testid="link-{{../id}}-{{platform}}">
                        <i class="{{icon}}"></i>
                    </a>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
