<!-- Pricing Section Component -->
<section id="pricing" class="py-20 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4" data-testid="pricing-title">{{pricing.title}}</h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto" data-testid="pricing-subtitle">
                {{pricing.subtitle}}
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each pricing.plans}}
            <div class="bg-card rounded-2xl shadow-lg p-8 border border-border relative{{#if isPopular}} transform scale-105{{/if}}" data-testid="pricing-{{id}}">
                {{#if isPopular}}
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="bg-accent text-accent-foreground px-4 py-2 rounded-full text-sm font-semibold">{{popularLabel}}</span>
                </div>
                {{/if}}
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-bold text-foreground mb-2">{{title}}</h3>
                    <div class="text-4xl font-bold text-primary mb-1">{{price}}</div>
                    <div class="text-muted-foreground">{{period}}</div>
                </div>
                <ul class="space-y-4 mb-8">
                    {{#each features}}
                    <li class="flex items-center text-muted-foreground">
                        <i class="fas fa-check text-accent mr-3"></i>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
                <button class="w-full {{buttonClass}} py-3 rounded-lg font-semibold transition-colors duration-200" data-testid="button-select-{{id}}">
                    {{buttonText}}
                </button>
            </div>
            {{/each}}
        </div>
        
        <div class="text-center mt-12">
            <p class="text-muted-foreground mb-4">{{pricing.customSolution.text}}</p>
            <a href="#contact" class="inline-flex items-center {{pricing.customSolution.buttonClass}} px-6 py-3 rounded-lg font-semibold transition-colors duration-200" data-testid="button-custom-solution">
                <i class="{{pricing.customSolution.icon}} mr-2"></i>
                {{pricing.customSolution.buttonText}}
            </a>
        </div>
    </div>
</section>
