<!-- About Section Component -->
<section id="about" class="py-20 bg-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4" data-testid="about-title">{{about.title}}</h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto" data-testid="about-subtitle">
                {{about.subtitle}}
            </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div>
                <img src="{{about.image.src}}" alt="{{about.image.alt}}" class="rounded-2xl shadow-xl w-full h-auto" data-testid="about-image" />
            </div>
            <div class="space-y-6">
                <h3 class="text-2xl font-bold text-foreground" data-testid="about-heading">{{about.heading}}</h3>
                {{#each about.paragraphs}}
                <p class="text-muted-foreground leading-relaxed" data-testid="about-text{{@index}}">
                    {{this}}
                </p>
                {{/each}}
                
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 pt-8">
                    {{#each about.stats}}
                    <div class="text-center">
                        <div class="text-3xl font-bold text-primary mb-2" data-testid="stat-{{id}}">{{value}}</div>
                        <div class="text-sm text-muted-foreground font-medium">{{label}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
