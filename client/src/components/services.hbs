<!-- Services Section Component -->
<section id="services" class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4" data-testid="services-title">{{services.title}}</h2>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto" data-testid="services-subtitle">
                {{services.subtitle}}
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each services.items}}
            <div class="service-card bg-card rounded-2xl shadow-lg p-8 border border-border hover:shadow-xl transition-all duration-300" data-testid="service-{{id}}">
                <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
                    <i class="{{icon}} text-2xl text-primary"></i>
                </div>
                <h3 class="text-2xl font-bold text-foreground mb-4">{{title}}</h3>
                <p class="text-muted-foreground mb-6 leading-relaxed">
                    {{description}}
                </p>
                <ul class="space-y-3 mb-8">
                    {{#each features}}
                    <li class="flex items-center text-muted-foreground">
                        <i class="fas fa-check text-accent mr-3"></i>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
                <a href="#contact" class="inline-flex items-center text-primary hover:text-primary/80 font-semibold transition-colors duration-200" data-testid="link-{{id}}">
                    Learn More <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</section>
