<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{companyName}} - Professional IT Services</title>
    <meta name="description" content="{{companyName}} delivers cutting-edge website design, robust system administration, and comprehensive IT security solutions to elevate your business.">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{{companyName}} - Professional IT Services">
    <meta property="og:description" content="Professional website design, system administration, and IT security services for modern businesses.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://tettrix.com">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/src/tw.css">
    <link rel="stylesheet" href="/src/styles.css">
</head>
<body class="bg-gray-50 text-gray-900 font-sans">
    
    <!-- Navigation Header -->
    <nav class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md shadow-sm z-50 border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex-shrink-0">
                    <h1 class="text-2xl font-bold text-blue-600">{{companyName}}</h1>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        {{#each navItems}}
                        <a href="{{href}}" class="{{#if isPrimary}}bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-md{{else}}text-gray-700 hover:text-blue-600 transition-colors duration-200 px-3 py-2{{/if}} text-sm font-medium" data-testid="nav-{{id}}">{{title}}</a>
                        {{/each}}
                    </div>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-btn" class="text-gray-700 hover:text-blue-600" data-testid="button-mobile-menu">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
            <!-- Mobile menu -->
            <div id="mobile-menu" class="md:hidden hidden pb-4">
                <div class="space-y-2">
                    {{#each navItems}}
                    <a href="{{href}}" class="{{#if isPrimary}}block bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200 mt-2{{else}}block text-gray-700 hover:text-blue-600 transition-colors duration-200 px-3 py-2 text-sm font-medium{{/if}}" data-testid="nav-mobile-{{id}}">{{title}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="pt-20 pb-16 bg-gradient-to-br from-blue-600 to-green-500">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="text-center lg:text-left">
                    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight" data-testid="hero-title">
                        {{hero.title}}
                    </h1>
                    <p class="text-xl text-white/90 mb-8 leading-relaxed" data-testid="hero-description">
                        {{hero.description}}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                        {{#each hero.buttons}}
                        <a href="{{href}}" class="{{classes}} inline-flex items-center justify-center" data-testid="button-{{id}}">
                            <i class="{{icon}} mr-2"></i>
                            {{text}}
                        </a>
                        {{/each}}
                    </div>
                </div>
                <div class="relative">
                    <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
                        <div class="space-y-4">
                            {{#each hero.features}}
                            <div class="flex items-center space-x-4">
                                <div class="w-16 h-16 bg-green-500/20 rounded-lg flex items-center justify-center">
                                    <i class="{{icon}} text-2xl text-white"></i>
                                </div>
                                <div>
                                    <h3 class="text-lg font-semibold text-white">{{title}}</h3>
                                    <p class="text-white/80">{{subtitle}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-testid="about-title">{{about.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-testid="about-subtitle">
                    {{about.subtitle}}
                </p>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                    <img src="{{about.image.src}}" alt="{{about.image.alt}}" class="rounded-2xl shadow-xl w-full h-auto" data-testid="about-image" />
                </div>
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-gray-900" data-testid="about-heading">{{about.heading}}</h3>
                    {{#each about.paragraphs}}
                    <p class="text-gray-600 leading-relaxed" data-testid="about-text{{@index}}">
                        {{this}}
                    </p>
                    {{/each}}
                    
                    <!-- Values Section -->
                    {{#if about.values}}
                    <div class="mt-8">
                        <h4 class="text-lg font-semibold text-gray-900 mb-6">Nos Valeurs</h4>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            {{#each about.values}}
                            <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-lg">
                                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <i class="{{icon}} text-blue-600"></i>
                                </div>
                                <div>
                                    <h5 class="font-semibold text-gray-900 mb-1">{{title}}</h5>
                                    <p class="text-sm text-gray-600">{{description}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 pt-8">
                        {{#each about.stats}}
                        <div class="text-center">
                            <div class="text-3xl font-bold text-blue-600 mb-2" data-testid="stat-{{id}}">{{value}}</div>
                            <div class="text-sm text-gray-600 font-medium">{{label}}</div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-testid="services-title">{{services.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-testid="services-subtitle">
                    {{services.subtitle}}
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each services.items}}
                <div class="service-card bg-white rounded-2xl shadow-lg p-8 border border-gray-200 hover:shadow-xl transition-all duration-300" data-testid="service-{{id}}">
                    <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
                        <i class="{{icon}} text-2xl text-blue-600"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">{{title}}</h3>
                    <p class="text-gray-600 mb-6 leading-relaxed">
                        {{description}}
                    </p>
                    <ul class="space-y-3 mb-8">
                        {{#each features}}
                        <li class="flex items-center text-gray-600">
                            <i class="fas fa-check text-green-500 mr-3"></i>
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                    <a href="#contact" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold transition-colors duration-200" data-testid="link-{{id}}">
                        Learn More <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="py-20 bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-testid="pricing-title">{{pricing.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-testid="pricing-subtitle">
                    {{pricing.subtitle}}
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each pricing.plans}}
                <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200 relative{{#if isPopular}} transform scale-105{{/if}}" data-testid="pricing-{{id}}">
                    {{#if isPopular}}
                    <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                        <span class="bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold">{{popularLabel}}</span>
                    </div>
                    {{/if}}
                    <div class="text-center mb-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-2">{{title}}</h3>
                        <div class="text-4xl font-bold text-blue-600 mb-1">{{price}}</div>
                        <div class="text-gray-600">{{period}}</div>
                    </div>
                    <ul class="space-y-4 mb-8">
                        {{#each features}}
                        <li class="flex items-center text-gray-600">
                            <i class="fas fa-check text-green-500 mr-3"></i>
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                    <button class="w-full {{buttonClass}} py-3 rounded-lg font-semibold transition-colors duration-200" data-testid="button-select-{{id}}">
                        {{buttonText}}
                    </button>
                </div>
                {{/each}}
            </div>
            
            <div class="text-center mt-12">
                <p class="text-gray-600 mb-4">{{pricing.customSolution.text}}</p>
                <a href="#contact" class="inline-flex items-center {{pricing.customSolution.buttonClass}} px-6 py-3 rounded-lg font-semibold transition-colors duration-200" data-testid="button-custom-solution">
                    <i class="{{pricing.customSolution.icon}} mr-2"></i>
                    {{pricing.customSolution.buttonText}}
                </a>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-testid="team-title">{{team.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-testid="team-subtitle">
                    {{team.subtitle}}
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {{#each team.members}}
                <div class="team-card text-center group" data-testid="team-member-{{id}}">
                    <div class="relative mb-6">
                        <img src="{{image}}" alt="{{imageAlt}}" class="w-32 h-32 rounded-full mx-auto object-cover shadow-lg" />
                        <div class="absolute inset-0 bg-blue-600/20 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">{{name}}</h3>
                    <p class="text-blue-600 font-semibold mb-3">{{role}}</p>
                    <p class="text-gray-600 text-sm mb-4">{{bio}}</p>
                    <div class="flex justify-center space-x-3">
                        {{#each socialLinks}}
                        <a href="{{url}}" class="text-gray-400 hover:text-blue-600 transition-colors duration-200" data-testid="link-{{../id}}-{{platform}}">
                            <i class="{{icon}}"></i>
                        </a>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" data-testid="contact-title">{{contact.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-testid="contact-subtitle">
                    {{contact.subtitle}}
                </p>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6">{{contact.info.title}}</h3>
                    
                    {{#each contact.info.items}}
                    <div class="flex items-start space-x-4" data-testid="contact-{{id}}">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="{{icon}} text-blue-600"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-2">{{title}}</h4>
                            <p class="text-gray-600">{{{content}}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                
                <!-- Contact Form -->
                <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6">{{contact.form.title}}</h3>
                    
                    <form id="contact-form" class="space-y-6" data-testid="contact-form">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            {{#each contact.form.fields}}
                            {{#if isHalf}}
                            <div>
                                <label for="{{id}}" class="block text-sm font-medium text-gray-900 mb-2">{{label}} {{#if required}}*{{/if}}</label>
                                <input type="{{type}}" id="{{id}}" name="{{id}}" {{#if required}}required{{/if}} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200" placeholder="{{placeholder}}" data-testid="input-{{id}}">
                            </div>
                            {{/if}}
                            {{/each}}
                        </div>
                        
                        {{#each contact.form.fields}}
                        {{#unless isHalf}}
                        <div>
                            <label for="{{id}}" class="block text-sm font-medium text-gray-900 mb-2">{{label}} {{#if required}}*{{/if}}</label>
                            {{#if isSelect}}
                            <select id="{{id}}" name="{{id}}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200" data-testid="select-{{id}}">
                                <option value="">{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{else if isTextarea}}
                            <textarea id="{{id}}" name="{{id}}" {{#if required}}required{{/if}} rows="{{rows}}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200 resize-vertical" placeholder="{{placeholder}}" data-testid="textarea-{{id}}"></textarea>
                            {{else}}
                            <input type="{{type}}" id="{{id}}" name="{{id}}" {{#if required}}required{{/if}} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200" placeholder="{{placeholder}}" data-testid="input-{{id}}">
                            {{/if}}
                        </div>
                        {{/unless}}
                        {{/each}}
                        
                        <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200 flex items-center justify-center" data-testid="button-send-message">
                            <i class="fas fa-paper-plane mr-2"></i>
                            {{contact.form.submitText}}
                        </button>
                    </form>
                    <div id="form-status" class="mt-4 hidden" data-testid="form-status"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
                <div>
                    <h3 class="text-2xl font-bold mb-4">{{footer.company.name}}</h3>
                    <p class="text-gray-300 mb-4">{{footer.company.description}}</p>
                    <div class="flex space-x-4">
                        {{#each footer.company.socialLinks}}
                        <a href="{{url}}" class="text-gray-400 hover:text-white transition-colors duration-200" data-testid="link-footer-{{platform}}">
                            <i class="{{icon}}"></i>
                        </a>
                        {{/each}}
                    </div>
                </div>
                
                {{#each footer.sections}}
                <div>
                    <h4 class="font-semibold mb-4">{{title}}</h4>
                    <ul class="space-y-2">
                        {{#each links}}
                        <li><a href="{{href}}" class="text-gray-300 hover:text-white transition-colors duration-200">{{text}}</a></li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
                
                <div>
                    <h4 class="font-semibold mb-4">{{footer.contactInfo.title}}</h4>
                    <div class="space-y-3 text-gray-300">
                        {{#each footer.contactInfo.items}}
                        <div class="flex items-{{#if multiline}}start{{else}}center{{/if}}">
                            <i class="{{icon}} mr-2{{#if multiline}} mt-1{{/if}}"></i>
                            <span>{{{content}}}</span>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            
            <div class="border-t border-gray-700 pt-8 text-center">
                <p class="text-gray-400">
                    {{footer.copyright}} | 
                    {{#each footer.legalLinks}}
                    <a href="{{href}}" class="hover:text-white transition-colors duration-200">{{text}}</a>{{#unless @last}} | {{/unless}}
                    {{/each}}
                </p>
            </div>
        </div>
    </footer>

    <script src="/src/main.js"></script>
</body>
</html>